{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/48.png",
        "96": "images/96.png",
        "128": "images/128.png",
        "256": "images/256.png",
        "512": "images/512.png",
        "1024": "images/1024.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    
    "permissions": [
        "webNavigation",
        "webRequest",
        "<all_urls>"
    ]
}
